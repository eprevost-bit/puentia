<odoo>
    <record id="view_project_task_template_form" model="ir.ui.view">
        <field name="name">project.task.template.form</field>
        <field name="model">project.task.template</field>
        <field name="arch" type="xml">
            <form string="Plantilla de Tarea">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Ej: Tarea de Instalación"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="Descripción">
                            <field name="description" placeholder="Instrucciones de la tarea..."/>
                        </page>
                        <page string="Subtareas (Esquema)">
                            <field name="child_ids" widget="section_one2many" mode="list">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <button name="open_record" type="object" icon="fa-external-link" title="Configurar Sub-subtareas"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_project_task_template_tree" model="ir.ui.view">
        <field name="name">project.task.template.list</field> <field name="model">project.task.template</field>
        <field name="arch" type="xml">
            <list string="Plantillas de Tareas">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_project_task_template" model="ir.actions.act_window">
        <field name="name">Plantillas de Tareas</field>
        <field name="res_model">project.task.template</field>
        <field name="view_mode">list,form</field> <field name="domain">[('parent_id', '=', False)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primera plantilla de tarea
            </p>
        </field>
    </record>

    <menuitem id="menu_project_task_template"
              name="Plantillas de Tareas"
              parent="project.menu_project_config"
              action="action_project_task_template"
              sequence="20"/>
</odoo>