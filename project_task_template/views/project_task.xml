<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_task_form2_inherit_template" model="ir.ui.view">
            <field name="name">project.task.form.inherit.template</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">

                 <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="task_template_id" options="{'no_create': True}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>